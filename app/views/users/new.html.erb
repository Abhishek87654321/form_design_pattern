<!-- app/views/users/new.html.erb -->

<h1>New User</h1>

<%= form_with(model: @user_form, url: users_path) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :email %>
  <%= form.email_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit "Create User" %>
<% end %>
